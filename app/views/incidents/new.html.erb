	<div id="mainContent">
  	<div id="form">
  	<h1>New Incident</h1>
<%= form_tag(new_incident_path, :method => "get", id: "search-form") do %>
<!-- text field tag=action,args,identifier,placeholdertext... -->
<%= text_field_tag :search, params[:search], class: "search-query", placeholder: "namesearch", type: "search",data: {autocomplete: autocomplete_animal_animalsname_incidents_path} %>  
<%= submit_tag "Search" %>
<%end%>

<script type="text/javascript" charset="utf-8">
  $('#search').bind('railsAutocomplete.select', function(event, data){
  $('#search-form').submit()
  });
</script>
<br>

<%= bootstrap_form_for(@incident) do |f| %>

 
<div class="field">
  <% if not @animals.nil? then %>
  
    <%= f.number_field :code, :value=>@animals.code , step: 1, :disabled=>true%>
    <%= f.hidden_field :code, :value=>@animals.code%>
    <%end%>

</div>
 

  <div class="field">
  <% if not @animals.nil? then %>
  <%= f.text_field :family, :value=>@animals.family,:disabled=>true%>
   <%= f.hidden_field :family, :value=>@animals.family%>
   <%end%>

  <div class="field">
    <% if not @animals.nil? then %>
    <%= f.number_field :officer, :value=>@current_officer.number,:disabled=>true,step: 1 %>
    <%= f.hidden_field :officer, :value=>@current_officer.number %>
      <%end%>
  </div>
  <div class="field">
    <%= f.text_area :reason %>
  </div>
  
  <div class="field">
    <%= f.datetime_select :whenfound %>
  </div>
  
  <div class="field">
    <%= f.text_area :wherefound %>
  </div>
  <div class="actions btn">
    <%= f.submit %>
  </div>
<% end %>
<br>

<%= link_to 'Back', incidents_path, :class => "btn btn-warning"%>
		</div>
		
	</div>