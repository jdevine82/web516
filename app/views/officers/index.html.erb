

<h1>Listing Officers</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Number</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td><%= officer.first_name %></td>
        <td><%= officer.last_name %></td>
        <td><%= officer.number %></td>
        <td><%= link_to 'Show', officer, :class => "btn btn-success" %>
        <%= link_to 'Edit', edit_officer_path(officer),:class => "btn btn-info" %>
        <%= link_to 'Destroy', officer, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>

</table>
  <%= link_to 'New', new_officer_path, :class => "btn btn-success" %>



